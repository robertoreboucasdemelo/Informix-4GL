      comments = " Situacao do tipo de desconto: (A)tivo ou (C)ancelado", upshift;
  d = dbsktipdsc.caddat, noentry;
  e = formonly.cadfunnom, noentry;
  f = dbsktipdsc.atldat, noentry;
  g = formonly.funnom, noentry;
  h = formonly.coddesp, comments='Informe o codigo da despesa contabil';
  i = formonly.ccusto, comments='Informe o codigo do centro de custo';
end

instructions
  delimiters " "
end
